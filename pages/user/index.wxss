/* pages/user/index.wxss */
@import "../../font/iconfont.wxss";

page {
  background-color: #EEF1F7;
}

.my_heade {
  height: 300rpx;
  background: linear-gradient(0deg, rgba(85, 205, 216, 1) 0%, rgba(84, 175, 255, 1) 100%);
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.my_avater {
  width: 160rpx
}

.my_avater image {
  border-radius: 50%;
  width: 100%;
}

.my_name {
  text-align: center;
  color: white;
}

.nav {
  width: 690rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
  border-radius: 20rpx;
  padding: 20rpx;
  background: white;
}

.nav_title {
  font-size: 40rpx;
  font-weight: 700;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

.nav_list {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.nav_item {
  text-align: center;
}